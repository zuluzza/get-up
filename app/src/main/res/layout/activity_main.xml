<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:padding="@dimen/inner_frame_layout_padding"
        app:boxedEdges="all">

        <TextView
            android:id="@+id/text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Welcome! Get Up! reminders are now active! You can define your personal preferences below" />

        <TextView
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:text="Active period:"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="0dp"/>
        <EditText
            android:id="@+id/activePeriodStart"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="85dp"
            android:inputType="number"
            android:text="7"
            android:visibility="visible"
            android:gravity="right" />
        <EditText
            android:id="@+id/activePeriodEnd"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="85dp"
            android:inputType="number"
            android:text="20"
            android:visibility="visible"
            android:gravity="right" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="-"
            android:layout_marginTop="98dp"
            android:layout_marginLeft="117dp"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:text="Hourly steps:"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="0dp"/>
        <EditText
            android:id="@+id/stepsGoal"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="123dp"
            android:inputType="number"
            android:text="250"
            android:visibility="visible"
            android:gravity="right"/>
    </FrameLayout>

</androidx.wear.widget.BoxInsetLayout>